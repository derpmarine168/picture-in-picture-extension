{
  "name": "Picture-in-Picture",
  "description": "Watch video using Picture-in-Picture",
  "version": "1.1",
  "icons": {
    "128": "assets/icon128.png"
  },
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": {
      "19": "assets/icon19.png",
      "38": "assets/icon38.png"
    }
  },
  "permissions": [
    "activeTab"
  ],
  "minimum_chrome_version": "69.0.3483.0",
  "manifest_version": 2
}

